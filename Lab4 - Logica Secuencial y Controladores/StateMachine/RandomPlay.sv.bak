module RandomPlay(input clock,
						input [1:0] playerID,
						output wire [1:0] pos1,pos2,pos3,pos4,pos5,pos6,pos7,pos8,pos9,
						output [1:0]nextPlayer);
						
// Verifies which position is available to play

 always @(posedge clock)
 
 begin
 
	if(pos1 == 2'b00) 
	
		begin 
		
		pos1 = playerID;
		
		if(playerID == 2'b01)
		
			nextPlayer <= 2'b10;
			
		else
		
			nextPlayer <= 2'b01;
			
		end
		
	else if(pos2 == 2'b00) 
	
		begin
		
		pos2 <= playerID;
		
		if(playerID == 2'b01)
		
			nextPlayer <= 2'b10;
			
		else
		
			nextPlayer <= 2'b01;
			
		end
		
	else if(pos3 == 2'b00)

		begin
		
		pos3 <= playerID;

		if(playerID == 2'b01)
		
			nextPlayer <= 2'b10;
			
		else
		
			nextPlayer <= 2'b01;
			
		end

	else if(pos4 == 2'b00)
	
		begin
		
		pos4 <= playerID;
		
		if(playerID == 2'b01)
		
			nextPlayer <= 2'b10;
			
		else
		
			nextPlayer <= 2'b01;
			
		end
		
	else if(pos5 == 2'b00)
	
		begin
		
		pos5 <= playerID;
		
		if(playerID == 2'b01)
		
			nextPlayer <= 2'b10;
			
		else
		
			nextPlayer <= 2'b01;
			
		end
		
	else if(pos6 == 2'b00)

		begin
		
		pos6 <= playerID;
		
		if(playerID == 2'b01)
		
			nextPlayer <= 2'b10;
			
		else
		
			nextPlayer <= 2'b01;
			
		end
		
	else if(pos7 == 2'b00) 
	
		begin
		
		pos7 <= playerID;
		
		if(playerID == 2'b01)
		
			nextPlayer <= 2'b10;
			
		else
		
			nextPlayer <= 2'b01;
			
		end
		
	else if(pos8 == 2'b00)
	
		begin
		
		pos8 <= playerID;

		if(playerID == 2'b01)
		
			nextPlayer <= 2'b10;
			
		else
		
			nextPlayer <= 2'b01;
			
		end
		
	else if(pos9 == 2'b00)
	
		begin
		
		pos9 <= playerID;
		
		if(playerID == 2'b01)
		
			nextPlayer <= 2'b10;
			
		else
		
			nextPlayer <= 2'b01;
			
		end
 end 
 
endmodule
			